{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "google" // google eslint default rules
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", "tab"],
        "no-tabs": 1,
        "space-before-function-paren": ["error", "always"]
    }
}
